import math
tempo = float(input('Digite o tempo '))
velocidade = float(input('Digite a velocidade '))
distancia = velocidade * tempo

litros_usados = distancia / 12

valor_litro = float(input('Digite o preco da gasolina por litro '))

valor_gasto = valor_litro * litros_usados

print('Velocidade :', velocidade)
print('Tempo gasto na viagem: ', tempo)
print('Distancia percorrida: ' , distancia)
print(f'O valor gasto na viagem, sendo o litro a:  {valor_litro:.2f} eh {valor_gasto:.2f}')
